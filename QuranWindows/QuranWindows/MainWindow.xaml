<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="QuranWindows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:QuranWindows.Views"
    xmlns:models="using:QuranWindows.Models"
    mc:Ignorable="d">

    <Grid>
        <NavigationView x:Name="NavView"
                        MenuItemsSource="{Binding Chapters}"
                        SelectedItem="{Binding SelectedChapter, Mode=TwoWay}"
                        PaneDisplayMode="Left"
                        IsSettingsVisible="False"
                        Header="Quran Windows">
            <NavigationView.MenuItemTemplate>
                <DataTemplate x:DataType="models:Chapter">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{x:Bind Id}" Width="30" Foreground="Gray"/>
                        <TextBlock Text="{x:Bind NameSimple}" FontWeight="SemiBold"/>
                        <TextBlock Text="{x:Bind NameArabic}" Margin="10,0,0,0" FontFamily="Segoe UI" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </NavigationView.MenuItemTemplate>

            <NavigationView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <views:ReadingView Grid.Row="0"/>
                    <views:PlayerView Grid.Row="1"/>
                </Grid>
            </NavigationView.Content>
        </NavigationView>
    </Grid>
</Window>
